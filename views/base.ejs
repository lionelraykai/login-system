<%- include('header') -%>


<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Login for existing user</span>
            <% if(locals.logout){%>
                <div class="alter alert-success text-center">
                    <%=logout%>
                </div>
               <%}%>
        </div>
        <form action="/route/login" method="POST" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <small class="form-text text-muted text-left">Register email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control check" name="password" placeholder="password">
                <img class="toggle" src="assets/eye.png">
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Submit</button>
        </form>
        <script>
            const input = document.querySelector('.check')
         document.querySelector('.toggle').addEventListener('click',()=>{
                 if(input.type === 'password'){
                     input.type = 'text'
                 }else{
                     input.type = 'password'
                 }
         })
        </script>
    </div>
</div>


    <%- include('footer') -%>
